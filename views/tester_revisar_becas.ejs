<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

</head>

<body>
    <%- include('./tester_navbar.ejs')%>
    <%- include('./tester_navbar_becas.ejs')%>



        <!-- Tabla Documentos  -->
        <div class="d-flex justify-content-center">
            <table id="tablaDocumento" class="table table-striped" style="width: 95%; margin: 20px auto;">
                <thead class="bg-dark text-light">
                    <tr>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Apellido</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Cedula</th>
                        <th class="text-center">Telefono</th>
                        <th class="text-center">Genero</th>
                        <th class="text-center">Tipo Beca</th>
                        <th class="text-center">Ficha Estudiantil</th>
                        <th class="text-center"></th>

                    </tr>
                </thead>
                <tbody>
                    <% data.forEach( (data) => { %>
                        <tr style="margin-top:5px">
                            <td style="display: none;">
                                <%= data._id %>
                            </td>
                            <td class="text-center">
                                <%= data.nombre %>
                            </td>
                            <td class="text-center">
                                <%= data.apellido %>
                            </td>
                            <td class="text-center">
                                <%= data.email %>
                            </td>
                            <td class="text-center">
                                <%= data.cedula %>
                            </td>
                            <td class="text-center">
                                <%= data.telefono %>
                            </td>
                            <td class="text-center">
                                <%= data.genero %>
                            </td>
                            <td class="text-center">
                                <%= data.tipoBeca %>
                            </td>
                            <td class="text-center">
                                <%= data.fichaEstudiantil %>
                            </td>

                            <td class="text-center">
                                <a href="/solicitudes/becas/aprobadas/editar/<%= data._id %>" class="btn bg-success " style="margin: 5px; width: 90%;">
                                    Aceptada <i class="bi bi-check"></i>
                                </a>

                                <a href="/solicitudes/becas/rechazadas/editar/<%= data._id %>" class="btn bg-danger" style="margin: 5px; width: 90%;">
                                    Rechazada <i class="bi bi-x-circle"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

        </div>

</body>

</html>